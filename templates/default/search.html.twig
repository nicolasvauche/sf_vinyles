{% extends 'layout/_default.html.twig' %}

{% block title %}Discogs API into{% endblock %}

{% block main %}
    {{ form_start(form, {'attr': {'class': 'app-form'}}) }}
    {{ form_widget(form) }}
    <button type="submit">Rechercher</button>
    {{ form_end(form) }}


    {% if(artist) %}
        <img src="{{ artist['cover_image'] }}" alt="{{ artist['title'] }}" />
        <h2>{{ artist['title'] }}</h2>
        <pre>{{ dump(artist) }}</pre>

        {% if(album) %}
            {% if(album['results'] is not defined) %}
                <img src="{{ album['cover_image'] }}" alt="{{ album['title'] }}" />
                <h2>{{ album['title'] }}</h2>
            {% else %}
                <h2>Albums</h2>
            {% endif %}
            <pre>{{ dump(album) }}</pre>
        {% endif %}
    {% endif %}
{% endblock %}
