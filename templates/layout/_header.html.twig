<header class="app-header">
    <h1>{{ pageTitle }}</h1>

    <div class="app-flex">
        <a href="{{ path('app_home') }}" class="app-logo" title="Retour à l'accueil">
            <img src="{{ asset('build/images/logo.png') }}" alt="Logo Vinylothèque" />
        </a>

        {% include 'layout/_navigation.html.twig' %}

        {% if app.user %}
            <a href="{{ path('app_logout') }}" onclick="return window.confirm('Vous partez ?')" title="Déconnexion">
                <i class="fa-solid fa-right-from-bracket"></i>
            </a>
        {% endif %}
    </div>
</header>
